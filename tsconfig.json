{
  "compilerOptions": {
    "target": "ES6",
    "noEmitOnError": true,
    "lib": ["ES2022"],
    "strict": false,
    "esModuleInterop": true,
    "outDir": "out-tsc",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
